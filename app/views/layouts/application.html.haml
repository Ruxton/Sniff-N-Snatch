/ [if (gt IE 9)|!(IE)]><!
%html.no-js{:lang => "en"}
  / <![endif]
  %head
  
    %meta{:charset => "UTF-8"}
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
    %title
      Sniff-N-Snatch
    %meta{:content => "", :name => "description"}
    %meta{:content => "", :name => "author"}
    %meta{:content => "width=device-width, initial-scale=1.0", :name => "viewport"}
    %link{:href => "/favicon.ico", :rel => "shortcut icon"}
    %link{:href => "/apple-touch-icon.png", :rel => "apple-touch-icon"}
    = stylesheet_link_tag 'style.css?v=2'
    = stylesheet_link_tag :all
    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Bangers'
    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Slackey'
    = javascript_include_tag :defaults
    = javascript_include_tag 'jquery.inlineedit.js'
    = javascript_include_tag 'url_watcher.js'
    = javascript_include_tag 'modernizr-1.7.min.js'
    = csrf_meta_tag                    
  %body
    #container
      %header
        %h1
          %a{ :href => '#', :onclick => '$("#link_information").show();$("#progress").show();return false;' }
            Sniff N Snatch
        %h2
          %a{ :href => '#', :onclick => '$("#progress").hide();urlwatcher.imageSwitch();return false;' }
            The Image Snatching URL Sniffer      
      #main{:role => "main"}
        = yield
      %footer
        %p
          Coded by &amp; Copyright &copy; 2011
          = link_to 'Greg Tangey', 'http://ignite.digitalignition.net'